<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Градиент фон -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#7e76fd"
                android:endColor="#426afd"
                android:type="linear"
                android:angle="45" /> <!-- 45° = 50% наклон как тебе нужно -->
        </shape>
    </item>

    <!-- Иконка по центру -->
    <item>
        <bitmap
            android:gravity="center"
            android:src="@mipmap/ic_launcher" /> <!-- logo.png -->
    </item>
    
</layer-list>